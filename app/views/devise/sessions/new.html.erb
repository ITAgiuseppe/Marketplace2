<div class="text-center">
<h2 style="color: #2A9D8F;">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email , style: "color:grey;" %><br>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password , style: "color:grey;"  %><br>
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me  , style: "color:grey;"  %><br>
    </div>
  <% end %>

  <div class="actions">
<button type="button" class="btn btn-outline-secondary">Submit</button>
  </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>

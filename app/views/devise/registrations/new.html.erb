<div class="text-center">
<h2 style="color: #2A9D8F;">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email , style: "color:grey;"  %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password  , style: "color:grey;"  %>
    <% if @minimum_password_length %>
    
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation  , style: "color:grey;"  %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions"><br>
    <button type="button" class="btn btn-outline-secondary">Submit</button>
  </div>
</div>
<% end %>

<%= render "devise/shared/links" %>
